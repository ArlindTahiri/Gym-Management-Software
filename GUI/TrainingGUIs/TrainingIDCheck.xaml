<Page x:Class="GUI.TrainingGUIs.TrainingIDCheck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.TrainingGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="TrainingIDCheck">

    <Grid>
        <Label Content="Bitte geben Sie Ihre Mitglieds ID ein" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IDCheck" HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="352" KeyDown="IDCheck_KeyDown" PreviewTextInput="IDCheck_PreviewTextInput"/>
        <TextBlock x:Name="WarningText" HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="384" Foreground="#FFD40303" TextAlignment="Center"/>

    </Grid>
</Page>
