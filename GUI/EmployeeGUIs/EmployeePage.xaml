<Page x:Class="GUI.EmployeeGUIs.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.EmployeeGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeePage" Background="#EFEFEF">

    <Grid>
        <Button x:Name="EditEmployee" Foreground="White" Background="#437CD8" Content="Mitarbeiter bearbeiten" HorizontalAlignment="Left" Height="86" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Click="EditEmployee_Click" Style="{DynamicResource RoundedButtonsStyle}"/>

        <Button x:Name="DeleteEmployeeButton" Foreground="White" Background="#437CD8" Content="Alle Mitarbeiter löschen" HorizontalAlignment="Right" Margin="0,151,10,0" VerticalAlignment="Top" Height="25" Width="135" Click="DeleteEmployeeButton_Click" Style="{DynamicResource RoundedButtonsStyle}"/>
        <Button x:Name="CheckoutButton" Foreground="White" Background="#437CD8" Content="Kassensturz" HorizontalAlignment="Left" Height="86" Margin="640,10,0,0" VerticalAlignment="Top" Width="150" Click="CheckoutButton_Click" Style="{DynamicResource RoundedButtonsStyle}"/>

        <DataGrid x:Name="EmployeeData" AutoGenerateColumns="False" CanUserResizeColumns="False" IsReadOnly="True" Margin="10,181,10,10" Loaded="EmployeeData_Loaded" Style="{DynamicResource DataGridStyle}" CellStyle="{DynamicResource DataGridCellStyle}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}" RowStyle="{DynamicResource DataGridRowStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="5*" Binding="{Binding EmployeeID}" />
                <DataGridTextColumn Header="Vorname" Width="20*" Binding="{Binding Forename}" />
                <DataGridTextColumn Header="Nachname" Width="20*" Binding="{Binding Surname}" />
                <DataGridTextColumn Header="Adresse" Width="20*" Binding="{Binding Street}" />
                <DataGridTextColumn Header="Postleitzahl" Width="10*" Binding="{Binding PostcalCode}" />
                <DataGridTextColumn Header="Stadt" Width="20*" Binding="{Binding City}" />
                <DataGridTextColumn Header="Land" Width="20*" Binding="{Binding Country}" />
                <DataGridTextColumn Header="Email" Width="20*" Binding="{Binding EMail}" />
                <DataGridTextColumn Header="IBan" Width="20*" Binding="{Binding Iban}" />
                <DataGridTextColumn Header="Geburtstag" Width="20*" Binding="{Binding Birthday}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
