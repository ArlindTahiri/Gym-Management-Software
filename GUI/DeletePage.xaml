<Page x:Class="GUI.DeletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="450"
      Title="DeletePage">

    <Grid>
        <Label x:Name="QuestionLabel" Content="" Margin="4,10,0,0" VerticalAlignment="Top" Height="39" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="436" />
        <Button x:Name="YesButton" Content="Ja" Margin="111,105,0,0" VerticalAlignment="Top" Height="53" Click="YesButton_Click" Background="#FF8EE47C" HorizontalAlignment="Left" Width="81" Style="{DynamicResource RoundedButtonsStyle}"/>
        <Button x:Name="NoButton" Content="Nein" Margin="246,105,0,0" Click="NoButton_Click" Background="#FFE86464" HorizontalAlignment="Left" Width="81" Height="53" VerticalAlignment="Top" Style="{DynamicResource RoundedButtonsStyle}"/>
        <TextBlock x:Name="QuestionBox" Margin="4,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" TextAlignment="Center" HorizontalAlignment="Left" Width="436"/>
    </Grid>
</Page>
