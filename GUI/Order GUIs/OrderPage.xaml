<Page x:Class="GUI.Order_GUIs.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Order_GUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <Grid>
        <Button x:Name="EditOrders" Content="Bestellungen bearbeiten" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="98" Width="205" Click="EditOrders_Click" Style="{DynamicResource RoundedButtonsStyle}"/>
        <DataGrid x:Name="OrderData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,181,0,0" Loaded="OrderData_Loaded"/>
        <Button x:Name="DeleteOrdersButton" Content="Alle Bestellungen löschen" HorizontalAlignment="Right" Margin="0,151,0,0" VerticalAlignment="Top" Height="25" Width="153" Click="DeleteMembersButton_Click"/>

    </Grid>
</Page>
