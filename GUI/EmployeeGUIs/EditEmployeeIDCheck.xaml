<Page x:Class="GUI.EmployeeGUIs.EditEmployeeIDCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GUI.EmployeeGUIs"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="400"
        Title="EditEmployeeIDCheck">
    <Grid>

        <Label Content="Bitte geben Sie die ID des Mitarbeiters ein, welchen Sie bearbeiten wollen" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="414" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="IDCheck" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="353" KeyDown="IDCheck_KeyDown" PreviewTextInput="IDCheck_PreviewTextInput"/>
        <TextBlock x:Name="WarningText" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="384" Foreground="#FFD40303"/>
        <DataGrid x:Name="EmployeeData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="23,189,24,165" Loaded="EmployeeData_Loaded"/>

    </Grid>
</Page>
