<Page x:Class="GUI.MemberGUIs.MemberChangeOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.MemberGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="400"
      Title="MemberChangeOptions">

    <Grid>
        <Button x:Name="AddMember" Content="Mitglied hinzufügen" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="67" Width="380" Click="AddMember_Click" Style="{DynamicResource RoundedButtonsStyle}"/>
        <Button x:Name="EditMember" Content="Mitgliedsdaten bearbeiten" HorizontalAlignment="Center" Margin="0,162,0,0" VerticalAlignment="Top" Height="67" Width="380" Click="EditMember_Click" Style="{DynamicResource RoundedButtonsStyle}"/>
        <Button x:Name="DeleteMember" Content="Mitglied entfernen" HorizontalAlignment="Center" VerticalAlignment="Top" Height="66" Width="380" Click="DeleteMember_Click" Margin="0,87,0,0" Style="{DynamicResource RoundedButtonsStyle}"/>
        <Button x:Name="ChangeContractButton" Content="Vertrag Wechseln" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Height="67" Width="380" Click="ChangeContractButton_Click" Style="{DynamicResource RoundedButtonsStyle}"/>

    </Grid>
</Page>
