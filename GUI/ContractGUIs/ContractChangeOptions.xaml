<Page x:Class="GUI.ContractGUIs.ContractChangeOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.ContractGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="ContractChangeOptions">

    <Grid>
        <Button x:Name="ChangeContractButton" Content="Vertrag ändern" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="67" Width="380" Click="ChangeContractButton_Click"/>
        <Button x:Name="PauseContractButton" Content="Vertrag pausieren" HorizontalAlignment="Center" VerticalAlignment="Center" Height="68" Width="380" Click="PauseContractButton_Click"/>
        <Button x:Name="DeleteContractButton" Content="Vertrag löschen" HorizontalAlignment="Center" Margin="0,172,0,0" VerticalAlignment="Top" Height="68" Width="380" Click="DeleteContractButton_Click"/>

    </Grid>
</Page>
