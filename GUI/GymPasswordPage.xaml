<Page x:Class="GUI.GymPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GymPasswordPage">

    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="41" Margin="0,112,0,0"/>
        <Label Content="Benutzername:" HorizontalAlignment="Left" Margin="116,112,0,0" VerticalAlignment="Top" Height="43" Width="94"/>
        <Label Content="Passwort:" HorizontalAlignment="Left" Margin="116,236,0,0" VerticalAlignment="Top" Height="42" Width="94"/>
        <Button Content="Anmelden" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" Height="59" Width="116" Click="LogIn_Click" Style="{DynamicResource RoundedButtonsStyle}" />
        <TextBlock x:Name="WarningText" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="384" Foreground="#FFD40303" TextAlignment="Center" Margin="0,299,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" Width="200" Height="41"/>
    </Grid>
</Page>
