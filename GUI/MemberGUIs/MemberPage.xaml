<Page x:Class="GUI.MemberGUIs.MemberPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.MemberGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MemberPage">

    <Grid>
        <Button x:Name="EditMember" Content="Mitglieder bearbeiten" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="98" Width="205" Click="EditMember_Click"/>
        <DataGrid x:Name="MemberData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,181,0,0" Loaded="MemberData_Loaded"/>
        <Button x:Name="DeleteMembersButton" Content="Alle Mitglieder löschen" HorizontalAlignment="Right" Margin="655,151,0,0" VerticalAlignment="Top" Height="25" Width="135" Click="DeleteMembersButton_Click"/>

    </Grid>
</Page>
