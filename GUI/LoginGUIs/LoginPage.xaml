<Page x:Class="GUI.LoginGUIs.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.LoginGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Button x:Name="EditLogins" Content="Logins Bearbeiten" HorizontalAlignment="Left" Height="100" Margin="20,27,0,0" VerticalAlignment="Top" Width="205" Click="EditLogins_Click"/>
        <DataGrid x:Name="LoginInventory" HorizontalAlignment="Center" Height="285" Margin="0,165,0,0" VerticalAlignment="Top" Width="800" d:ItemsSource="{d:SampleData ItemCount=5}" Loaded="LoginInventory_Loaded"/>
        <Button x:Name="DeleteLoginsButton" Content="Alle Logins löschen" HorizontalAlignment="Left" Margin="655,134,0,0" VerticalAlignment="Top" Height="26" Width="135" Click="DeleteLoginsButton_Click"/>

    </Grid>
</Page>
