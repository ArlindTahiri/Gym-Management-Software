<Page x:Class="GUI.ContractGUIs.ContractPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.ContractGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContractPage">

    <Grid>
        <Button x:Name="DeleteContractButton" Content="Vertrag löschen" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="104" Width="249" Click="DeleteContractButton_Click" Style="{DynamicResource RoundedButtonsStyle}"/>
        <DataGrid x:Name="ContractInventory" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,193,10,10" Loaded="ContractInventory_Loaded"/>
        <Button x:Name="AddContractButton" Content="Vertrag hinzufügen" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="104" Width="249" Click="AddContractButton_Click" Style="{DynamicResource RoundedButtonsStyle}"/>
        <Button x:Name="DeleteContractsButton" Content="Alle Verträge löschen" HorizontalAlignment="Right" Margin="0,163,10,0" VerticalAlignment="Top" Height="25" Width="135" Click="DeleteContractsButton_Click"/>
        <Button x:Name="ChangeContractButton" Content="Vertrag bearbeiten(noch implementieren)&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="104" Width="248" Click="ChangeContractButton_Click" Style="{DynamicResource RoundedButtonsStyle}"/>

    </Grid>
</Page>
