<Page x:Class="GUI.EmployeeGUIs.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.EmployeeGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeePage">

    <Grid>
        <Button x:Name="EditEmployee" Content="Mitarbeiter bearbeiten" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="98" Width="205"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,181,0,0"/>
        <Button x:Name="ArticleButton" Content="Inventar" HorizontalAlignment="Left" Margin="585,10,0,0" VerticalAlignment="Top" Height="98" Width="205" Click="ArticleButton_Click"/>

    </Grid>
</Page>
