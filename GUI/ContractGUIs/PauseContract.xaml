<Page x:Class="GUI.ContractGUIs.PauseContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.ContractGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="350"
      Title="PauseContract">

    <Grid>
        <Label Content="Geben Sie an bis wann sie den Vertrag Pausieren wollen" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PauseTime" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" Height="28" PreviewKeyDown="PauseTime_PreviewKeyDown"/>

    </Grid>
</Page>
