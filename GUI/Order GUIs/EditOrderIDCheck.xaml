<Page x:Class="GUI.Order_GUIs.EditOrderIDCheck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Order_GUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="EditOrderIDCheck">

    <Grid>
        <Label Content="Bitte geben Sie die ID der Bestellung ein, die Sie ändern wollen" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IDCheck" HorizontalAlignment="Center" Margin="0,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="353" KeyDown="IDCheck_KeyDown"   />
        <DataGrid x:Name ="OrderData" HorizontalAlignment="Center" Height="183" Margin="0,190,0,0" VerticalAlignment="Top" Width="352" d:ItemsSource="{d:SampleData ItemCount=5}" Loaded="OrderData_Loaded"/>
        <TextBlock x:Name="WarningText" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" Width="384" Foreground="#FFD40303"/>

    </Grid>
</Page>
