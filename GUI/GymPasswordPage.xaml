<Page x:Class="GUI.GymPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="GymPasswordPage" Background="#EFEFEF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="150*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="350*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="250*" />
            <ColumnDefinition Width="250*" />
        </Grid.ColumnDefinitions>

        <Label Content="Benutzername:" Grid.Column="0" Grid.Row="0" Margin="10,20,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30"/>
        <TextBox x:Name="Username" VerticalContentAlignment="Center" TextAlignment="Center" Grid.Row="1" Grid.Column="0"  FontSize="30" Margin="100,10,100,10" TextWrapping="Wrap" Style="{DynamicResource RoundedTextBox}"/>

        <Label Content="Passwort:" Grid.Column="2" Grid.Row="0" Margin="10,20,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30"/>
        <PasswordBox Style="{DynamicResource PasswordBoxStyle}" x:Name="PasswordBox" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1"  Margin="100,10,100,10" FontSize="30"/>

        <Label  Grid.Row="2" Grid.ColumnSpan="2" Margin="400,10,400,10" HorizontalContentAlignment="Center"  Foreground="Red">
            <Viewbox>
                <Label Content="" Margin="10,10,10,10" Foreground="White" x:Name="WarningText"/>
            </Viewbox>
        </Label>


        <Button  Foreground="White" Background="#437CD8"  Grid.Row="3" Grid.ColumnSpan="2" Margin="400,100,400,100" Click="LogIn_Click" Style="{DynamicResource RoundedButtonsStyle}">
            <Viewbox>
                <TextBlock Margin="10,10,10,10" Foreground="White" Text="Anmelden" />
            </Viewbox>
        </Button>
    </Grid>
</Page>
