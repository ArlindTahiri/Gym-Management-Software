        <TextBox x:Name="Country" HorizontalAlignment="Left" Height="100" Margin="770,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
        <TextBox x:Name="EMail" HorizontalAlignment="Left" Height="100" Margin="936,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
