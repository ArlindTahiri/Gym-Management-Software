<Page x:Class="GUI.LoginGUIs.LogInCheck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.LoginGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="LogInCheck">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75*" />
            <RowDefinition Height="150*" />
            <RowDefinition Height="75*" />

        </Grid.RowDefinitions>

        <Label x:Name="Label1" Grid.Row="0" Margin="20,20,20,10" FontSize="45" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="LoginCheck" Grid.Row="1" Margin="20,10,20,10" TextWrapping="Wrap" PreviewKeyDown="LoginCheck_KeyDown" FontSize="45" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBlock x:Name="WarningText" Grid.Row="2" Margin="20,10,20,20" TextWrapping="Wrap" Foreground="#FFD40303" FontSize="45" TextAlignment="Center" VerticalAlignment="Center" />

    </Grid>
</Page>
