<Page x:Class="GUI.LoginGUIs.EditLoginCheck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.LoginGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="EditLoginCheck">

    <Grid>
        <Label Content="Geben sie bitte den Login ein, welchen Sie bearbeiten wollen" HorizontalAlignment="Center" Height="34" Margin="0,35,0,0" VerticalAlignment="Top" Width="352" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="LoginCheck" HorizontalAlignment="Center" Height="32" Margin="0,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" PreviewKeyDown="LoginCheck_KeyDown"/>
        <TextBlock x:Name="WarningText" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" Width="372" Foreground="#FFD40303"/>

    </Grid>
</Page>
