<Page x:Class="GUI.ContractGUIs.ContractIDCheck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.ContractGUIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="ContractIDCheck">

    <Grid>
        <Label Content="Bitte geben Sie die ID des Vertrags ein, den Sie löschen wollen" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IDCheck" HorizontalAlignment="Center" Margin="0,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="353" PreviewKeyDown="IDCheck_PreviewKeyDown" PreviewTextInput="IDCheck_PreviewTextInput" />
        <TextBlock x:Name="WarningText" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" Width="384" Foreground="#FFD40303"/>
        <DataGrid x:Name="ContractData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="24,197,24,157" Loaded="ContractData_Loaded"/>

    </Grid>
</Page>
